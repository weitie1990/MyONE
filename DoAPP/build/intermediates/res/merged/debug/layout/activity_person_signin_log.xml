<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dark"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/backgroud"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/signin_log_person_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/iv_main_back"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="外勤签到"
            android:layout_centerHorizontal="true"
            android:textColor="@color/main_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/signin_log_person_statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="统计"
            android:textColor="@color/main_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >
        <TextView
            android:id="@+id/signin_log_person_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="星期四 2016-02-11"
            android:layout_weight="1"
            android:textColor="@color/main_text"
            android:textSize="@dimen/main_text_sizes_middle"
            />
        <TextView
            android:id="@+id/signin_log_person_selecttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/moment_dot_music"
            android:textSize="@dimen/main_text_sizes_middle"
            android:drawableLeft="@drawable/clock_smol"
            android:text="选择时间"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray" />
    <ListView
        android:id="@+id/lv_signinLog_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="16dp"
        android:minHeight="@dimen/activity_horizontal_margin"
        android:background="@color/backgroud"

        >

    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray" />
</LinearLayout>
