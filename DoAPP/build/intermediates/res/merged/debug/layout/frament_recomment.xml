<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv_recomment_titile"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:layout_marginTop="60px"
            android:background="@drawable/view_shape"
            android:gravity="center"
            android:text="@string/recommend_content"
            android:textColor="@color/main_kuang"
            android:textSize="45px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="60px"
            android:layout_marginBottom="60px"
            android:orientation="vertical"
            android:background="@drawable/view_shape">

            <ImageView
                android:id="@+id/iv_friends_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/iv_friends_up" />

           <include
               layout="@layout/card_swiped_std_card_inner"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_margin="15px"
               />

            <ImageView
                android:id="@+id/iv_friends_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/iv_friends_down"
                android:layout_marginBottom="15px"
                />

        </LinearLayout>

