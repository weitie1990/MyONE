<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/backgroud"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/message_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:onClick="back"
            android:src="@drawable/iv_main_back" />

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/post"
            android:textColor="@color/main_kuang"
            android:textSize="60px" />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/dark_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/view_shape"
        android:layout_margin="30px"
        android:padding="15px"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:text="签名"
        android:textColor="@color/main_kuang"
        android:layout_marginTop="60px"
        android:textSize="54px"
        />

    <EditText
        android:id="@+id/et_sign_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:hint="阳光灿烂的日子"
        android:paddingLeft="15px"
        android:textColorHint="@color/two_text"
        android:gravity="top|left"
        android:background="@drawable/view_shape"
        android:layout_marginTop="10px"
        android:cursorVisible="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:text="心情晴雨表"
        android:textColor="@color/main_kuang"
        android:layout_marginTop="20dp"
        android:textSize="54px" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10px"

        >


        <com.zhy.autolayout.widget.AutoRadioGroup
            android:id="@+id/radioGroup_sign_xinqing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_shape"
            android:orientation="vertical"
            android:paddingLeft="60px">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="晴天  平常心"
                android:textColor="@color/main_kuang"
                android:textSize="54px"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingRight="30px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray"
                />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阳光  开心"
                android:textColor="@color/main_kuang"
                android:textSize="54px"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingRight="30px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/dark_gray"
                />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="雷电  怒了"
                android:textColor="@color/main_kuang"
                android:textSize="54px"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingRight="30px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray"
                />
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下雨  难过"
                android:textColor="@color/main_kuang"
                android:textSize="54px"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingRight="30px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray"
                />
            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="刮风  忙碌"
                android:textColor="@color/main_kuang"
                android:textSize="54px"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingRight="30px"
                />
        </com.zhy.autolayout.widget.AutoRadioGroup>
    </LinearLayout>

        <Button
            android:id="@+id/btn_register_next"
            android:layout_width="500px"
            android:layout_height="120px"
            android:background="@drawable/btn_main_selector"
            android:enabled="true"
            android:text="提交"
            android:textSize="@dimen/main_text_login"
            android:textColor="@color/main_kuang"
            android:layout_marginTop="60px"
            android:layout_gravity="center_horizontal"
            android:onClick="next" />

    </LinearLayout>
</LinearLayout>
