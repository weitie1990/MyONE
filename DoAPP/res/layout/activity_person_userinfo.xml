<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/backgroud"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/message_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:onClick="back"
            android:src="@drawable/iv_main_back" />

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="@color/main_kuang"
            android:textSize="60px" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/dark_gray" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="30px"
            android:padding="15px"
            android:background="@drawable/view_shape"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/main_dark"
                >

                <com.lanxiao.doapp.myView.CircularImage
                    android:id="@+id/iv_userPic"
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:layout_marginLeft="30px"
                    android:scaleType="centerCrop"
                    app:layout_auto_baseheight="width"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:paddingBottom="30px"
                    >

                    <TextView
                        android:id="@+id/iv_userinfo_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_kuang"
                        android:textSize="60px"
                        android:layout_marginTop="60px"
                        />

                    <TextView
                        android:id="@+id/iv_userinfo_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_userinfo_name"
                        android:textColor="@color/main_kuang"
                        android:textSize="40px"
                        />

                    <ImageView
                        android:id="@+id/iv_setting_twocode"
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="80px"
                        android:src="@drawable/mm_title_btn_qrcode_normal" />


                </RelativeLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="昵    称"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="姓    名"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="出生日期"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="性    别"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="身份证"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="标    签"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="职    务"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_moblephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="手    机"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="E-mail"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
            android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="电    话"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />
            <com.lanxiao.doapp.myView.MainSetItemView
                android:id="@+id/ll_person_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unitItemName="地    区"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:background="@color/dark_gray" />

        </LinearLayout>
</LinearLayout>