<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mob="http://schemas.android.com/tools"
    android:background="#f2f2f2"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/backgroud"
        android:gravity="center_vertical">
        <include layout="@layout/ease_commom_back_btn" />

        <TextView
            android:id="@+id/add_list_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/main_kuang"
            android:textSize="60px"

            />
        

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/dark_gray"
        />
    <include layout="@layout/ease_search_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/view_shape"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginBottom="30px"
        android:padding="30px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/ease_mm_listitem"
            android:gravity="center_vertical"
            android:padding="30px"
            android:id="@+id/contact_nichen_search"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_kuang"
                android:text="按昵称查找"
                android:textSize="48px"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/iv_main_go"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/do_linked_linklayout_selector"
            android:gravity="center_vertical"
            android:padding="30px"
            android:id="@+id/contact_id_search"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_kuang"
                android:text="按用户ID查找"
                android:textSize="48px"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/iv_main_go"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/ease_mm_listitem"
            android:gravity="center_vertical"
            android:padding="30px"
            android:id="@+id/contact_phone_search"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_kuang"
                android:text="按手机号查找"
                android:textSize="48px"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/iv_main_go"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/do_linked_linklayout_selector"
            android:gravity="center_vertical"
            android:padding="30px"
            android:id="@+id/contact_companyName_search"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_kuang"
                android:text="按公司名称"
                android:textSize="48px"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/iv_main_go"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/ease_mm_listitem"
            android:gravity="center_vertical"
            android:padding="30px"
            android:id="@+id/contact_nickname_search"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_kuang"
                android:text="按行业查找"
                android:textSize="48px"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/iv_main_go"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/do_linked_linklayout_selector"
            android:gravity="center_vertical"
            android:padding="30px"
            android:id="@+id/contact_lication_search"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_kuang"
                android:text="按标签查找"
                android:textSize="48px"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/iv_main_go"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/ease_mm_listitem"
            android:gravity="center_vertical"
            android:padding="30px"
            android:id="@+id/contact_qcr_search"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_kuang"
                android:text="扫二维码"
                android:textSize="48px"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/iv_main_go"
                />
        </LinearLayout>


    </LinearLayout>
