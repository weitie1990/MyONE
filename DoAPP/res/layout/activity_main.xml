<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tool"
    tools:context="com.lanxiao.doapp.activity.MainActivity$PlaceholderFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:id="@+id/top_line"
        />

        <FrameLayout
            android:id="@+id/tab_content1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_dark"
            >

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/dark_gray"
            />
        <com.zhy.autolayout.widget.AutoRadioGroup
            android:id="@+id/tabs_rg"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/backgroud"

            >

            <RadioButton
                android:id="@+id/tab_rb_doing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_buttom_tab_earth"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/Doing"
                android:textColor="@color/do_tabtext_selector"
                android:textSize="39px"
                />
            <RelativeLayout
                android:id="@+id/btn_container_conversation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <RadioButton
                    android:id="@+id/tab_rb_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ib_tab_chat"
                    android:text="@string/message"
                    android:textColor="@color/do_tabtext_selector"
                    android:textSize="39px"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    />

                <TextView
                    android:id="@+id/unread_msg_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/unread_count_bg"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/main_text"
                    android:textSize="39px"
                    android:visibility="invisible" />
            </RelativeLayout>
            <!-- <RadioButton
                android:id="@+id/tab_rb_add"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:button="@null"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/sumcolor"
                />-->
            <ImageView
                android:id="@+id/tab_rb_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ib_tab_add"
                android:background="?android:attr/actionBarItemBackground"
                />
            <RelativeLayout
                android:id="@+id/btn_container_address_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <RadioButton
                    android:id="@+id/tab_rb_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/iv_contanct_add"
                    android:button="@null"
                    android:text="@string/friends"
                    android:textColor="@color/do_tabtext_selector"
                    android:textSize="39px"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/unread_address_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/unread_count_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="39px"
                    android:visibility="invisible" />
            </RelativeLayout>
           <!-- <RadioButton
                android:id="@+id/tab_rb_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:drawableTop="@drawable/selector_buttom_tab_friends"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/friends"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
-->
            <RadioButton
                android:id="@+id/tab_rb_appliation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:drawableTop="@drawable/selector_buttom_tab_colnd"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/appliatin"
                android:textColor="@color/do_tabtext_selector"
                android:textSize="39px"
                />

        </com.zhy.autolayout.widget.AutoRadioGroup>






</LinearLayout>

